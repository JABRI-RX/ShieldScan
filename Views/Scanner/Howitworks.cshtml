@{
ViewData["title"] = "How Does it Work";
}
<div class="space-y-4">
    <br/>
    <!-- How It Works Section -->
    <div class="flex flex-wrap items-center justify-between py-8 bg-gray-50">
        <!-- Text Section -->
        <div class="w-full md:w-1/2 px-4">
            <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight md:text-5xl xl:text-6xl text-black">
                How It <span class="leading-normal bg-green-400 rounded-xl py-1 px-2">Works</span>
            </h1>
            <ol class="space-y-3 text-1xl text-gray-500 list-decimal list-inside">
                <li>
                    <span class="text-xl font-semibold text-gray-900">
                        Upload or provide the list of Maven dependencies from your Spring Boot project
                    </span>
                </li>
                <li>
                    <span class="text-xl font-semibold text-gray-900">
                        Our tool scans the dependencies for known <span class=" text-2xl text-red-400">vulnerabilities</span>
                    </span>
                </li>
                <li>
                    <span class="text-xl font-semibold text-gray-900">
                        Receive a detailed report highlighting risks and suggested remediations.
                    </span>
                </li>
            </ol>
        </div>

        <!-- Image Section -->
        <div class="w-full md:w-1/2 px-4">
            <img class="rounded-lg shadow-lg" src="~/images/howitworksbg1.svg"   alt="">
        </div>
    </div>

    <br/>
    <br/>
    <!-- Our Features -->
    <div class="flex flex-wrap items-center justify-between py-8 bg-gray-50">
        <!-- Image Section -->
        <div class="w-full md:w-1/2 px-4">
            <img class="rounded-lg shadow-lg" src="~/images/howitworksbg2.jpg"   alt="">
        </div>
        <!-- Text Section -->
        <div class="w-full md:w-1/2 px-4">
            <!-- Features Section -->
            <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight md:text-5xl xl:text-6xl text-black">
                Our <span class="leading-normal bg-green-400 rounded-xl py-1 px-2">Features</span>
            </h1>
            <div class="max-w-4xl px-4">
                <ul class="space-y-4">
                    <li>
                        <h3 class="text-xl font-semibold text-gray-900">Automated Dependency Scanning</h3>
                        <p class="text-gray-600">
                            Quickly identify vulnerabilities in Maven dependencies with just a few clicks.
                        </p>
                    </li>
                    <li>
                        <h3 class="text-xl font-semibold text-gray-900">Comprehensive Vulnerability Database</h3>
                        <p class="text-gray-600">
                            Powered by an up-to-date vulnerability database to provide accurate results.
                        </p>
                    </li>
                    <li>
                        <h3 class="text-xl font-semibold text-gray-900">Detailed Reporting</h3>
                        <p class="text-gray-600">
                            Get insights into each identified issue with recommendations for fixes.
                        </p>
                    </li>
                    <li>
                        <h3 class="text-xl font-semibold text-gray-900">User-Friendly Interface</h3>
                        <p class="text-gray-600">
                            Simple and intuitive design for an effortless experience.
                        </p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br/>
    <br/>
    <!-- Why Choose Us Section -->
    <div class="flex flex-wrap items-center justify-center py-8 bg-gray-50">
        <div class=" ">
            <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight md:text-5xl xl:text-6xl text-black">
                Why Choose <span class="leading-normal bg-green-400 rounded-xl py-1 px-2">Us?</span>
            </h1>
            <ul class="space-y-4 text-left text-gray-500 dark:text-gray-400">
                <li class="flex items-center space-x-3 rtl:space-x-reverse">
                    <svg class="flex-shrink-0 w-8 text-green-500  p-2 bg-[#282c34]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
                    </svg>
                    <span class="text-xl font-semibold text-gray-900">Save time by automating manual checks</span>
                </li>
                <li class="flex items-center space-x-3 rtl:space-x-reverse">
                    <svg class="flex-shrink-0 w-8  text-green-500 p-2 bg-[#282c34]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
                    </svg>
                    <span class="text-xl font-semibold text-gray-900">Stay ahead of potential threats with real-time updates</span>
                </li>
                <li class="flex items-center space-x-3 rtl:space-x-reverse">
                    <svg class="flex-shrink-0 w-8  text-green-500 p-2 bg-[#282c34]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
                    </svg>
                    <span class="text-xl font-semibold text-gray-900">Ensure your application is secure and reliable.</span>
                </li>
            </ul>   
        </div>
 
    </div>
    <br/>
    <br/>
    <div class="flex justify-center">
        <a asp-controller="Scanner" asp-action="Scan" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-bold text-center text-black  bg-green-400 rounded-lg bg-primary-700 hover:bg-green-500 focus:ring-4 focus:ring-green-800">
            Scan My Project
            <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>    
    </div>
    
</div>
